<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="#AFA7EF"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/header_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#000000"
        tools:text="Titre"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/header_custom_picture"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/header_custom_title"
        android:layout_toEndOf="@+id/header_custom_title"
        android:src="@drawable/ic_gorilla" />

</RelativeLayout>